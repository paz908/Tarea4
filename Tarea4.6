void setup() {
  // put your setup code here, to run once:
  // Luz roja
pinMode(13, OUTPUT);
// Luz amarilla
pinMode(12, OUTPUT);
// Luz verde
pinMode(7, OUTPUT);


}

void loop() {
  // put your main code here, to run repeatedly:
digitalWrite(13, HIGH);
delay(1000);

digitalWrite(13, LOW);
delay(300); 

digitalWrite(12, HIGH);
delay(500);

digitalWrite(12, LOW);
delay(150);

digitalWrite(7, HIGH);
delay(1500);

digitalWrite(7, LOW);
delay(300);



}
